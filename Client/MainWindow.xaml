<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1080">
    <StackPanel Background="WhiteSmoke">
        <Grid Height="50">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10 0">
                <Button Uid="0" Width="150" Content="Szukaj" Height="50" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF2196F3"  Click="Button_Tab_Click" />
                <Button Uid="1" Width="150" Content="Dodaj markę" Height="50" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF2196F3"  Click="Button_Tab_Click" />
                <Button Uid="2" Width="150" Content="Dodaj telefon" Height="50" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF2196F3"  Click="Button_Tab_Click" />
            </StackPanel>
            <Grid x:Name="GridCursor" Width="150" Height="3" Background="#FF2196F3" HorizontalAlignment="Left" Margin="10 0 0 3" VerticalAlignment="Bottom" />
        </Grid>
        <Grid x:Name="GridMain" Height="520" Background="BurlyWood">
            <local:SearchContent />
        </Grid>
    </StackPanel>
</Window>
